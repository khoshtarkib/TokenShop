
@{
    Layout = "~/Views/shared/_layout.cshtml";
}

<main class="page login-page">
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading">
            </div>
            @using (Html.BeginForm("Index", "RememberMe", FormMethod.Post))
            {
                if (!string.IsNullOrEmpty(ViewBag.message))
                {
                    <div class="form-group"><p>@ViewBag.message</p></div>
                }
                <div class="form-group"><label for="email">@TokenShop.Common.LanguageManagment.Translate("email")</label><input class="form-control item" type="text" name="username"></div>
                <button class="btn btn-primary btn-block" type="submit">@TokenShop.Common.LanguageManagment.Translate("send")</button>
            }
        </div>
    </section>
</main>

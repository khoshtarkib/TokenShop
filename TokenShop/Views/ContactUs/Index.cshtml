
@{
    Layout = "~/Views/shared/_layout.cshtml";
}

<main class="page contact-us-page">
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading">
                <h2 class="text-info">@TokenShop.Common.LanguageManagment.Translate("contact_us")</h2>
            </div>

            <form method="post" action="/@TokenShop.Common.LanguageManagment.lang/contactus">
                    <div class="form-group"><label>@TokenShop.Common.LanguageManagment.Translate("first_name")</label><input class="form-control" type="text" name="name"></div>
                    <div class="form-group"><label>@TokenShop.Common.LanguageManagment.Translate("subject")</label><input class="form-control" type="text" name="subject"></div>
                    <div class="form-group"><label>@TokenShop.Common.LanguageManagment.Translate("email")</label><input class="form-control" type="text" name="email"></div>
                    <div class="form-group"><label>@TokenShop.Common.LanguageManagment.Translate("content")</label><textarea class="form-control" name="message"></textarea></div>
                    <div class="form-group"><button class="btn btn-primary btn-block" type="submit">@TokenShop.Common.LanguageManagment.Translate("send")</button></div>
            </form>
</div>
    </section>
</main>

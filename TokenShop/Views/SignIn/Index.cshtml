
@{
    Layout = "~/Views/shared/_layout.cshtml";
}

<main class="page login-page">
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading">
            </div>
            <form method="post" action="/@TokenShop.Common.LanguageManagment.lang/signin">
                @if (!string.IsNullOrEmpty(ViewBag.message))
                {
                    <div class="form-group"><p>@ViewBag.message</p></div>
                }
                <div class="form-group"><label for="email">@TokenShop.Common.LanguageManagment.Translate("username")</label><input class="form-control item" type="text" name="username"></div>
                <div class="form-group"><label for="password">@TokenShop.Common.LanguageManagment.Translate("password")</label><input class="form-control" type="password" name="password"></div>
                <button class="btn btn-primary btn-block" type="submit">@TokenShop.Common.LanguageManagment.Translate("sign_in")</button>
                <div class="form-group">
                    <div class="form-check">
                        <a href="/@TokenShop.Common.LanguageManagment.lang/rememberme/">@TokenShop.Common.LanguageManagment.Translate("remember_me")</a>
                    </div>
                </div>
            </form>
        </div>
    </section>
</main>

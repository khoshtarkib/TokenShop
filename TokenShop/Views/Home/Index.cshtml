                            <h4>140 تومان</h4>
                        </div><button class="btn btn-outline-primary btn-block" type="button">مشاهده</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<main class="page service-page">
    <section class="clean-block clean-services white">
        <div class="container">
            <div class="block-heading">
                <h2 class="text-info">آخرین خبرها و اطلاعیه ها</h2>
            </div>
            <div class="row">
                @for (int i = 0; i < Model.Count; i++)
                {
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <img class="card-img-top w-100 d-block" src="/media/cover/@Model[i].Cover">
                        <div class="card-body">
                            <h4 class="card-title">@Model[i].Subject</h4>
                        </div>
                        <div><a class="btn btn-outline-primary btn-sm" href="/post/detail/@Model[i].Id">ادامه</a></div>
                    </div>
                </div>
                }
            </div>
        </div>
    </section>
</main>


<!doctype html>
<html class="no-js" lang="en" style="height: 100%;">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>ورود به سیستم مدیریت</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <link rel="stylesheet" href="/content/admin/css/bootstrap.min.css">
    <link rel="stylesheet" href="/content/admin/css/font-awesome.min.css">
    <link rel="stylesheet" href="/content/admin/css/adminpro-custon-icon.css">
    <link rel="stylesheet" href="/content/admin/css/normalize.css">
    <link rel="stylesheet" href="/content/admin/css/form.css">
    <link rel="stylesheet" href="/content/admin/style.css">
    <link rel="stylesheet" href="/content/admin/css/responsive.css">
    <script src="/content/admin/js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body class="materialdesign" style="background: linear-gradient(to bottom, #0e3a42 0%, #188d8f 100%);height: 100%">
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- Header top area start-->
    <div class="wrapper-pro">
        <!-- login Start-->
        <div class="login-form-area mg-b-40">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-4"></div>
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "adminpro-form", style = "direction: rtl;text-align: right;", id = "adminpro-form" }))
                    {
                        <div class="col-lg-4">
                            <div class="login-bg" style="margin-top: 100px;">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="logo" style="height: 100px;">
                                            <a href="#">
                                                <img src="~/content/admin/img/login.png" alt="" style="width: 140px;position: absolute;top: -90px;right: 36%;" />
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 right">
                                        <div class="login-input-head">
                                            <p>نام کاربری</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-8 left">
                                        <div class="login-input-area">
                                            <input type="text" name="email" required oninvalid="setCustomValidity('لطفا مقدار این فیلد را وارد نمایید')" oninput="setCustomValidity('')"/>
                                            <i class="fa fa-envelope login-user" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 right">
                                        <div class="login-input-head">
                                            <p>کلمه عبور</p>
                                        </div>
                                    </div>
                                    <div class="col-lg-8 left">
                                        <div class="login-input-area">
                                            <input type="password" name="password" required oninvalid="setCustomValidity('لطفا مقدار این فیلد را وارد نمایید')" oninput="setCustomValidity('')"/>
                                            <i class="fa fa-lock login-user"></i>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="forgot-password">
                                                    <a href="#">کلمه عبور خود را فراموش کرده اید؟</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        @if (!string.IsNullOrEmpty(ViewBag.message))
                                        {
                                            <div class="alert alert-danger alert-mg-b">
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                                <strong>خطا!</strong> @ViewBag.message
                                            </div>
                                        }
                                    </div>
                                    <div class="col-lg-4 right">
                                    </div>
                                    <div class="col-lg-8 left">
                                        <div class="login-button-pro">
                                            <button type="submit" class="btn btn-success btn-lg">ورود</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-lg-4"></div>
                </div>
            </div>
        </div>
        <!-- login End-->
    </div>

    <script src="/content/admin/js/vendor/jquery-1.11.3.min.js"></script>
    <script src="/content/admin/js/bootstrap.min.js"></script>
    <script src="/content/admin/js/main.js"></script>
</body>
</html>
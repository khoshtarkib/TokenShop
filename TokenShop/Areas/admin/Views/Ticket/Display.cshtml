@model List<TokenShop.Models.TicketContent>
@{
    Layout = "~/Areas/admin/Views/Shared/_layout.cshtml";
}
@using (Html.BeginForm("Display", "Ticket", FormMethod.Post))
{
    <input type="hidden" id="ticketId" name="ticketId" value="@ViewBag.Id" />
    <div class="inbox-mailbox-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="tab-content">

                                <div id="composemail" class="tab-pane fade in animated zoomInDown custom-inbox-message shadow-reset active">

                                    <div id="home" class="tab-pane fade in active animated zoomInLeft">
                                        <div class="user-profile-comment-list">
                                            @for (int i = 0; i < Model.Count; i++)
                                            {
                                                <div class="row profile-comment-mg">
                                                    <div class="col-lg-1 col-md-2 col-sm-2 col-xs-12 right">
                                                        <div class="user-profile-comment-img projuct-details-img-tab">
                                                            <a href="#">
                                                                <img src="/content/profile/img/notification/6.jpg" alt="">
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 right">
                                                        <div class="user-profile-comment-content">
                                                            <p>
                                                            @if (!string.IsNullOrEmpty(Model[i].UserName))
                                                            {
                                                                <strong>@Model[i].UserName</strong>
                                                            }
                                                            @if (!string.IsNullOrEmpty(Model[i].CustomerName))
                                                            {
                                                                <strong>@Model[i].CustomerName</strong>
                                                            }
                                                            <br/> @Model[i].Content</p>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12 right">
                                                        <div class="user-profile-comment-content">
                                                            <div class="row">
                                                                <div class="col-lg-12">
                                                                    <div class="comment-date-profile profile-details-name-nn">
                                                                        <span>@Model[i].RegisterDatePersian</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }

                                        </div>
                                    </div>

                                    <div class="view-mail-wrap">
                                        <div class="mail-title">
                                            <h2>ارسال پاسخ به این پیام</h2>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-2 right">
                                                <div class="compose-email-to compose-subject-title">
                                                    <span>متن :</span>
                                                </div>
                                            </div>
                                            <div class="col-lg-10 right">
                                                <div class="text-editor-compose">
                                                    <div id="summernote5">
                                                        <textarea class="form-control" style="width:100%" placeholder="متن پیام خود را وارد نمایید" name="message" rows="4"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="view-mail-reply-list">
                                                    <ul class="view-mail-forword">
                                                        <li class="left">
                                                            <button type="submit" class="btn btn-success"><i class="fa fa-reply"></i> ارسال</button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
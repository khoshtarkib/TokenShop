
@{
    Layout = "~/Areas/profile/Views/Shared/_layout.cshtml";
}
@using (Html.BeginForm("New", "Ticket", FormMethod.Post))
{
<div class="inbox-mailbox-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="tab-content">
                            
                            <div id="composemail" class="tab-pane fade in animated zoomInDown custom-inbox-message shadow-reset active">
                                <div class="view-mail-wrap">
                                    <div class="mail-title">
                                        <h2>@TokenShop.Common.LanguageManagment.Translate("ticket_send")</h2>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-2 right">
                                                    <div class="compose-email-to">
                                                        <span>@TokenShop.Common.LanguageManagment.Translate("subject"):</span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-10 right">
                                                    <div class="compose-multiple-email">
                                                        <input type="text" id="subject" name="subject" class="form-control" required oninvalid="setCustomValidity('@TokenShop.Common.LanguageManagment.Translate("please_fill_field")')" oninput="setCustomValidity('')">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-2 right">
                                                    <div class="compose-email-to compose-subject-title">
                                                        <span>@TokenShop.Common.LanguageManagment.Translate("periority") :</span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-10 right">
                                                    <div class="compose-multiple-email compose-subject-email">

                                                        <select name="periority" class="form-control">
                                                            <option value="1">@TokenShop.Common.LanguageManagment.Translate("urgent")</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-2 right">
                                            <div class="compose-email-to compose-subject-title">
                                                <span>@TokenShop.Common.LanguageManagment.Translate("content") :</span>
                                            </div>
                                        </div>
                                        <div class="col-lg-10 right">
                                            <div class="text-editor-compose">
                                                <div id="summernote5">
                                                    <textarea  class="form-control" style="width:100%" name="message" rows="4"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="view-mail-reply-list">
                                                <ul class="view-mail-forword">
                                                    <li class="left">
                                                        <button type="submit" class="btn btn-success"><i class="fa fa-reply"></i> @TokenShop.Common.LanguageManagment.Translate("send")</button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
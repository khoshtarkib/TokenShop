@model List<TokenShop.Models.CustomerToken>

@{
    Layout = "~/Areas/profile/Views/Shared/_layout.cshtml";
}


<div class="inbox-mailbox-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="tab-content">
                            <div id="inbox" class="tab-pane fade in animated zoomInDown custom-inbox-message shadow-reset active">
                                <div class="mail-title inbox-bt-mg">
                                    <h2 class="right">@TokenShop.Common.LanguageManagment.Translate("token_transactions")</h2>
                                </div>
                                <div class="datatable-dashv1-list custom-datatable-overright">
                                    <div id="toolbar">
                                    </div>
                                    <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="false" data-show-refresh="false" data-key-events="true" data-show-toggle="false" data-resizable="true" data-cookie="true" data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                                        <thead>
                                            <tr>
                                                <th data-field="state" data-checkbox="true"></th>
                                                <th data-field="id">@TokenShop.Common.LanguageManagment.Translate("token_count")</th>
                                                <th data-field="bank">@TokenShop.Common.LanguageManagment.Translate("type")</th>
                                                <th data-field="description">@TokenShop.Common.LanguageManagment.Translate("description")</th>
                                                <th data-field="cart">@TokenShop.Common.LanguageManagment.Translate("date")</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.Count; i++)
                                            {
                                                <tr class="new-email">
                                                    <td></td>
                                                    <td>
                                                        @Model[i].Count
                                                    </td>
                                                    <td>
                                                        @if (Model[i].Action == 1)
                                                        {
                                                            <span>@TokenShop.Common.LanguageManagment.Translate("increase")</span>
                                                        }
                                                        @if (Model[i].Action == 2)
                                                        {
                                                            <span>@TokenShop.Common.LanguageManagment.Translate("decrease")</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (Model[i].ActionBy == 1)
                                                        {
                                                            <span>@TokenShop.Common.LanguageManagment.Translate("token_buy")</span>
                                                        }
                                                        @if (Model[i].ActionBy == 2)
                                                        {
                                                            <span>@TokenShop.Common.LanguageManagment.Translate("token_transfer")</span><span>: @Model[i].ActionCustomerName</span>
                                                        }
                                                        @if (Model[i].ActionBy == 3)
                                                        {
                                                            <span>@TokenShop.Common.LanguageManagment.Translate("token_transfer"):</span><span>: @Model[i].ActionCustomerName</span>
                                                        }
                                                        @if (Model[i].ActionBy == 4)
                                                        {
                                                            <span>@TokenShop.Common.LanguageManagment.Translate("return_price")</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @Model[i].DatePersian
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

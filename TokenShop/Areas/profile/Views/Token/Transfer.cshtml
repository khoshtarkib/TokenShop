
@{
    Layout = "~/Areas/profile/Views/Shared/_layout.cshtml";
}
<div class="login-form-area mg-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            @using (Html.BeginForm("Transfer", "Token", FormMethod.Post, new { id = "adminpro-register-form", @class = "adminpro-form" }))
            {
                <input type="hidden" name="state" value="@ViewBag.state" />
                <input type="hidden" name="code" value="@ViewBag.code" />
                <div class="col-lg-6">
                    <div class="login-bg">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-title">
                                    <h1>@TokenShop.Common.LanguageManagment.Translate("token_transfer")</h1>
                                </div>
                            </div>
                        </div>
                        @if (ViewBag.state == 2)
                        {
                        <div class="row">
                            <div class="col-lg-5">
                                <div class="login-input-head">
                                    <p>@TokenShop.Common.LanguageManagment.Translate("token_transfer_reciption_name")</p>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="login-input-area">
                                    <span style="color:green;font-weight: bold;">@ViewBag.transfer_user_name</span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-5">
                                <div class="login-input-head">
                                    <p>@TokenShop.Common.LanguageManagment.Translate("token_count")</p>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="login-input-area">
                                    <input type="text" name="count" value="@ViewBag.Count" />
                                    <i class="fa fa-money login-user"></i>
                                </div>
                            </div>
                        </div>
                        }
                        @if (ViewBag.state == 1)
                        {
                        <div class="row">
                            <div class="col-lg-5">
                                <div class="login-input-head">
                                    <p>@TokenShop.Common.LanguageManagment.Translate("token_transfer_reciption_id")</p>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="login-input-area">
                                    <input type="text" name="reciver_code" />
                                    <i class="fa fa-code login-user"></i>
                                </div>
                            </div>
                        </div>
                        }
                        <div class="row">
                            <div class="col-lg-5"></div>
                            <div class="col-lg-7">
                                <div class="login-button-pro">
                                    <button type="submit" class="login-button login-button-rg">@TokenShop.Common.LanguageManagment.Translate("transfer")</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>

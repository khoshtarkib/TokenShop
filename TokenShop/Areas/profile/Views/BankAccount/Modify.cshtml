@model TokenShop.Models.BankAccount
@{
    Layout = "~/Areas/profile/Views/Shared/_layout.cshtml";
}
@using (Html.BeginForm("Modify", "BankAccount", FormMethod.Post))
{
    <input type="hidden" name="bankId" value="@Model.Id" />
    <div class="inbox-mailbox-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="tab-content">

                                <div id="composemail" class="tab-pane fade in animated zoomInDown custom-inbox-message shadow-reset active">
                                    <div class="view-mail-wrap">
                                        <div class="mail-title">
                                            <h2>@TokenShop.Common.LanguageManagment.Translate("edit")</h2>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="row">
                                                    <div class="col-lg-2 right">
                                                        <div class="compose-email-to">
                                                            <span>@TokenShop.Common.LanguageManagment.Translate("account_number")</span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-10 right">
                                                        <div class="compose-multiple-email">
                                                            <input type="text" id="number" value="@Model.AccountNumber" name="number" class="form-control" required oninvalid="setCustomValidity('@TokenShop.Common.LanguageManagment.Translate("please_fill_field")')" oninput="setCustomValidity('')">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="row">
                                                    <div class="col-lg-2 right">
                                                        <div class="compose-email-to">
                                                            <span>@TokenShop.Common.LanguageManagment.Translate("cart_number")</span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-10 right">
                                                        <div class="compose-multiple-email">
                                                            <input type="text" id="cart" name="cart" value="@Model.CardNumber" class="form-control" required oninvalid="setCustomValidity('@TokenShop.Common.LanguageManagment.Translate("please_fill_field")')" oninput="setCustomValidity('')">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="row">
                                                    <div class="col-lg-2 right">
                                                        <div class="compose-email-to">
                                                            <span>@TokenShop.Common.LanguageManagment.Translate("sheba")</span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-10 right">
                                                        <div class="compose-multiple-email">
                                                            <input type="text" id="sheba" name="sheba" value="@Model.Sheba" class="form-control" required oninvalid="setCustomValidity('@TokenShop.Common.LanguageManagment.Translate("please_fill_field")')" oninput="setCustomValidity('')">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="row">
                                                    <div class="col-lg-2 right">
                                                        <div class="compose-email-to compose-subject-title">
                                                            <span>@TokenShop.Common.LanguageManagment.Translate("bank") :</span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-10 right">
                                                        <div class="compose-multiple-email compose-subject-email">
                                                            <select name="bank" class="form-control">
                                                                @if (Model.BankId == 1)
                                                                {
                                                                        <option value="1">ملی</option>
                                                                }
                                                                else
                                                                {
                                                                        <option value="1" selected>ملی</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="view-mail-reply-list">
                                                    <ul class="view-mail-forword">
                                                        <li class="left">
                                                            <button type="submit" class="btn btn-success"><i class="fa fa-reply"></i> @TokenShop.Common.LanguageManagment.Translate("save")<</button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}